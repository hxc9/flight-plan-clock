{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": ["REDIS_URL", "BACKEND_URL", "NEXT_PUBLIC_BACKEND_URL", "AUTOROUTER_API_URL", "ADMIN_PASSWORD", "PORT", "NODE_ENV"],
  "pipeline": {
    "clean": {},
    "build": {
      "dependsOn": ["^build", "clean"],
      "outputs": ["build/**", "dist/**", ".next/**"]
    },
    "start": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
